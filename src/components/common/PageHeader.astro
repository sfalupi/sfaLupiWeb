---
import { upperHumanize } from "@lib/textConverter";

interface Props {
  title?: string;
}

const { title = "" }: Props = Astro.props;
---

<style>
  @font-face {
  font-display: swap;
  font-family: "Archivo Light";
  font-style: normal;
  font-weight: 700;
  src: url("/fonts/Archivo-Light.ttf") format("truetype");

  .title-font{
    font-family: "Archivo Light";
  }
}
</style>

<section class="flex justify-center">
  <div class="container text-center m-2">
    <div class="rounded-lg p-0 bg-gradient-to-t gradient">
      <div class="rounded-lg glass px-8 py-6 intersect:animate-fadeDown opacity-0 intersect-no-queue">
        <h1 set:text={upperHumanize(title)} class ="title-font"/>
      </div>
    </div>
  </div>
</section>
