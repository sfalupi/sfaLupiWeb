---
import type { AuthorsEntry } from "@/types";
import CollectionLayout from "@components/contact/CollectionLayout.astro";
import { getEntries } from "@lib/contentParser";
import { getIndex } from "@lib/contentParser";
import { sortByTitle } from "@lib/sortFunctions";

const authorIndex = (await getIndex("contact")) as AuthorsEntry;
const entries = (await getEntries("contact", sortByTitle)) as AuthorsEntry[];
---

<CollectionLayout authorIndex={authorIndex} entries={entries} />